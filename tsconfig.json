{
  "compilerOptions": {
    "composite": true,
    "lib": ["esnext"],
    "types": ["node"],
    "target": "esnext",
    "module": "esnext",
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": false,
    "allowJs": false,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "paths": {
      "@/*": [
        "src/*"
      ],
    }
  },
  "exclude": [ "packages/**/__test__", "packages/**/test" ]
}
