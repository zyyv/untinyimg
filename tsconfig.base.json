{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "useDefineForClassFields": true,
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": false,
        "allowJs": false,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": false,
        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "dist",
        "types": [],
        "paths": {
            "@/*": [
                "src/*"
            ],
        }
    }
}
